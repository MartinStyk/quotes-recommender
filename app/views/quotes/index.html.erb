<h1>Quotes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Author</th>
      <th>Text</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.text %></td>
        <td><%= quote.categories.map {|cat| cat.name}.join(', ') %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.has_role? :admin %>
  <%= link_to 'New Quote', new_quote_path %>
<% end %>
